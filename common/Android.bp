android_app_import {
    name: "MiuiCamera",
	owner: "xiaomi",
    apk: "proprietary/system_ext/priv-app/MiuiCamera/MiuiCamera.apk",
    overrides: [
        "Aperture",
        "Camera2",
        "GoogleCamera",
        "GoogleCameraGo",
    ],
    certificate: "platform",
    privileged: true,
    system_ext_specific: true,
    required: [
        "miuicamera-hiddenapi-package-allowlist.xml",
        "privapp-permissions-miuicamera.xml",
        "privapp-permissions-miuiextraphoto.xml",
    ],
    optional_uses_libs: [
        "libSNPE.so",
        "libOpenCL.so",
        "libcdsprpc.so",
        "libmialgo_ai_vision.so",
        "libxmi_slow_motion_mein.so",
        "libmialgo_utils.so",
        "libmiocr.so",
        "libcamera_ispinterface_jni.xiaomi.so",
        "libcamera_algoup_jni.xiaomi.so",
        "libcamera_imagecodec_jni.xiaomi.so",
        "libcamera_jpegutil_jni.xiaomi.so",
        "libneuron_adapter_mgvi.so",
        "libneuron_adapter.so",
        "libneuronusdk_adapter.mtk.so",
    ],
}

android_app_import {
    name: "MiuiExtraPhoto",
	owner: "xiaomi",
    apk: "proprietary/system_ext/priv-app/MiuiExtraPhoto/MiuiExtraPhoto.apk",
    certificate: "media",
    privileged: true,
    system_ext_specific: true,
    uses_libs: ["org.apache.http.legacy"],
}

